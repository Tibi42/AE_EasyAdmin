{# Layout de base de l'application #}
<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}La Coop√© des Vignerons - Vins & Terroir
			{% endblock %}
		</title>
		<meta name="description" content="{% block meta_description %}Bienvenue sur La Coop√© des Vignerons, votre boutique en ligne de vins d'exception directement issus du domaine.{% endblock %}">
		<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
		<link rel="canonical" href="{{ app.request.uri }}">

		<link
		rel="icon" type="image/svg+xml" href="{{ asset('favicon.svg') }}">
		<!-- Indices de ressources (Pr√©-connexion) -->
		<link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>
		<link rel="preconnect" href="https://images.unsplash.com" crossorigin>
		<link rel="preconnect" href="https://vectorlogo.zone" crossorigin>
		<link rel="preconnect" href="https://i.pravatar.cc" crossorigin>
		<link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
		<link
		rel="dns-prefetch" href="https://images.unsplash.com">

		<!-- Pr√©chargement des ressources critiques -->
		<link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" as="style" crossorigin>

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" media="all" crossorigin> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{# Importation de la map des scripts Stimulus/Turbo #}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body
		data-controller="modal cookie">
		{# Composant En-t√™te : contient le bandeau d'info, la navigation et les actions utilisateur #}
		{% include 'components/header.html.twig' %}

		<main class="container my-4">
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'success' ? 'success' : (label == 'warning' ? 'warning' : 'info')) }} alert-dismissible fade show" role="alert">
						{{ message }}
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				{% endfor %}
			{% endfor %}

			{% block body %}{% endblock %}
		</main>

		{# Composant Pied de page : contient les liens utiles, les r√©seaux sociaux et le copyright #}
		{% include 'components/footer.html.twig' %}

		{# Bandeau de consentement cookies (fixe en bas d'√©cran, visible par d√©faut si pas de consentement) #}
		<div class="cookie-consent-bar-wrapper" data-cookie-target="bar" role="dialog" aria-label="Choix des cookies" id="cookie-consent-bar">
			<div class="container">
				<div class="cookie-consent-bar rounded-3 p-3 shadow">
					<div class="row align-items-center g-3">
						<div class="col-lg-7">
							<p class="mb-0 small text-dark">
								<i class="fas fa-cookie-bite me-2 text-primary" aria-hidden="true"></i>
								Nous utilisons des cookies pour le fonctionnement du site, l'analyse du trafic et la personnalisation.
								<a href="#" class="text-primary text-decoration-underline fw-medium ms-1" data-turbo="false" data-action="click->cookie#openPreferences:prevent">G√©rer les pr√©f√©rences</a>
							</p>
						</div>
						<div class="col-lg-5 d-flex flex-wrap gap-2 justify-content-lg-end">
							<button type="button" class="btn btn-outline-secondary btn-sm" id="cookie-refuse-btn">
								Refuser les cookies non essentiels
							</button>
							<button type="button" class="btn btn-primary btn-sm" id="cookie-accept-btn">
								Tout accepter
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
		<script>
			(function(){
				var KEY = 'cookie_consent';
				var bar = document.getElementById('cookie-consent-bar');
				function hideBar(){ if(bar) bar.classList.add('d-none'); }
				function setConsent(obj){ try{ localStorage.setItem(KEY, JSON.stringify(obj)); }catch(e){} hideBar(); }
				if(localStorage.getItem(KEY)) hideBar();
				document.getElementById('cookie-accept-btn')?.addEventListener('click', function(){ setConsent({essential:true,analytics:true,marketing:true}); });
				document.getElementById('cookie-refuse-btn')?.addEventListener('click', function(){ setConsent({essential:true,analytics:false,marketing:false}); });
			})();
		</script>

		<!-- Modale Produit (Bootstrap 5) -->
		<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true" data-modal-target="dialog">
			<div class="modal-dialog modal-lg modal-dialog-centered">
				<div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
					<div class="modal-body p-0">
						<div class="row g-0">
							<div class="col-md-6 bg-light d-flex align-items-center justify-content-center p-4">
								<div class="product-modal-image-container w-100 h-100 d-flex align-items-center justify-content-center" style="min-height: 300px;">
									<img src="" alt="" class="img-fluid rounded-3 shadow-sm object-fit-cover" data-modal-target="image">
									<div class="display-1 text-muted d-none" data-modal-target="placeholder">üì¶</div>
								</div>
							</div>
							<div class="col-md-6 p-4 p-md-5 d-flex flex-column">
								<div class="d-flex justify-content-between align-items-start mb-3">
									<h3 class="fw-bold text-dark mb-0" id="productModalLabel" data-modal-target="title">Produit</h3>
									<button type="button" class="btn-close py-2" data-bs-dismiss="modal" aria-label="Close"></button>
								</div>

								<div class="mb-4">
									<p class="text-muted" data-modal-target="description" style="line-height: 1.6;">Description du produit...</p>
								</div>

								<div class="mt-auto pt-4 border-top">
									<div class="d-flex align-items-center justify-content-between mb-4">
										<span class="fs-4 text-muted">Prix :</span>
										<span class="fs-2 fw-bold text-primary" data-modal-target="price">0.00 ‚Ç¨</span>
									</div>

									<div class="row g-2">
										<div class="col-8">
											<a href="#" class="btn btn-primary btn-lg w-100 rounded-3 fw-bold py-3" data-modal-target="addToCartLink">
												<i class="fas fa-cart-plus me-2"></i>
												Ajouter au panier
											</a>
										</div>
										<div class="col-4">
											<button type="button" class="btn btn-outline-secondary btn-lg w-100 rounded-3 py-3" data-bs-dismiss="modal">Fermer</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		{# Modale Gestion des cookies #}
		<div class="modal fade" id="cookieModal" tabindex="-1" aria-labelledby="cookieModalLabel" aria-hidden="true" data-cookie-target="modal">
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
					<div class="modal-header border-0 pb-0">
						<h2 class="modal-title fw-bold" id="cookieModalLabel">
							<i class="fas fa-cookie-bite text-primary me-2" aria-hidden="true"></i>
							Gestion des cookies
						</h2>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
					</div>
					<div class="modal-body pt-2">
						<p class="text-muted small mb-4">Nous utilisons des cookies pour le fonctionnement du site, l'analyse du trafic et la personnalisation. Cochez les types de cookies que vous acceptez.</p>
						<div class="cookie-modal-choices">
							<div class="form-check form-check-lg mb-3 py-2 px-3 bg-light rounded">
								<input type="checkbox" class="form-check-input" id="cookie-modal-essential" disabled checked>
								<label class="form-check-label fw-medium" for="cookie-modal-essential">Essentiels</label>
								<p class="small text-muted mb-0 mt-1">N√©cessaires au fonctionnement du site (toujours actifs)</p>
							</div>
							<div class="form-check form-check-lg mb-3 py-2 px-3 bg-light rounded">
								<input type="checkbox" class="form-check-input" id="cookie-modal-analytics" data-cookie-target="analyticsCheckbox">
								<label class="form-check-label fw-medium" for="cookie-modal-analytics">Analytics</label>
								<p class="small text-muted mb-0 mt-1">Mesure d'audience et statistiques de visite</p>
							</div>
							<div class="form-check form-check-lg mb-3 py-2 px-3 bg-light rounded">
								<input type="checkbox" class="form-check-input" id="cookie-modal-marketing" data-cookie-target="marketingCheckbox">
								<label class="form-check-label fw-medium" for="cookie-modal-marketing">Marketing</label>
								<p class="small text-muted mb-0 mt-1">Publicit√© et personnalisation des contenus</p>
							</div>
						</div>
					</div>
					<div class="modal-footer border-0 pt-0">
						<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Fermer</button>
						<button type="button" class="btn btn-primary" data-action="click->cookie#savePreferences" data-cookie-target="savePreferences">
							Enregistrer mes choix
						</button>
					</div>
				</div>
			</div>
		</div>

		{# Modale de v√©rification d'√¢ge #}
		<div class="modal fade" id="ageModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" data-controller="age-check" aria-labelledby="ageModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
					<div class="modal-body text-center p-5">
						<div class="age-check-icon mb-4">
							<i class="fas fa-wine-bottle text-primary" style="font-size: 4rem;" aria-hidden="true"></i>
						</div>
						<h3 class="fw-bold mb-3" id="ageModalLabel">V√©rification de la majorit√©</h3>
						<p class="text-muted mb-4">Pour acc√©der √† notre cave en ligne, vous devez avoir l'√¢ge l√©gal de consommer de l'alcool dans votre pays de r√©sidence.</p>

						<div class="d-grid gap-3">
							<button type="button" class="btn btn-primary btn-lg rounded-pill fw-bold py-3" data-bs-dismiss="modal" data-action="click->age-check#verify">
								J'AI PLUS DE 18 ANS
							</button>
							<a href="https://www.google.com" class="btn btn-link text-muted text-decoration-none small">
								Je suis mineur, je quitte le site
							</a>
						</div>
					</div>
					<div class="modal-footer justify-content-center bg-light border-0 py-3">
						<small class="text-muted">L'abus d'alcool est dangereux pour la sant√©.</small>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
